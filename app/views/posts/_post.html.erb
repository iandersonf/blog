<div id="<%= dom_id post %>">
  <div>
    <strong>Title:</strong>
    <%= post.title %>
  </div>

  <div>
    <strong>Body:</strong>
    <%= post.body %>
  </div>

  <div>
    <strong> Updated at:</strong>
    <%= time_tag post.updated_at, "data-local":"time",
      "data-format":"%B %e, %Y %l:%M %p" %>
  </div>
</div>
